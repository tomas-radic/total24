<div class="page__content">
  <div>
    <% if managed_season.present? %>
      <%= link_to "Vypísať turnaj", new_manager_tournament_path, class: "btn btn-success" %>
    <% else %>
      <%= link_to "Otvoriť sezónu", new_manager_season_path, class: "btn btn-success" %>
    <% end %>
  </div>
  <% if @tournaments&.first %>
    <h2 class="text-center my-4">
      Turnaje <%= managed_season.name %>
    </h2>

    <table class="centered-table">
      <thead>
        <tr class="centered-table__heading-row">
          <th>Názov</th>
          <th>Dátum</th>
        </tr>
      </thead>
      <tbody>
        <% @tournaments.each do |tournament| %>
          <tr class="<%= inactive_css_class(!tournament.published?) %>">
            <td><%= link_to tournament.name, edit_manager_tournament_path(tournament) %></td>
            <td><%= TournamentPresenter.new(tournament).date %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <%= render "shared/no_content" %>
  <% end %>
</div>
