<% if selected_season.present? && players.any? %>
  <div class="available-players">
    <h3 class="accent-color">Niekto hľadá súpera na zápas!</h3>
    <% players.each do |player| %>
      <div class="today__request-link">
        <span class="m-auto">
          <%= link_to PlayerPresenter.new(player, privacy: signed_in_player.blank?).name, player_path(player), class: "default-color" %>
          hľadá niekoho už od
          <%= app_date(player.open_to_play_since) %>
        </span>
      </div>
    <% end %>
  </div>
<% end %>
