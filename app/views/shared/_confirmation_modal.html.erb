<div class="modal fade" id="confirmation-modal" tabindex="-1" data-controller="confirmation-modal"
     aria-labelledby="confirmation-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-3" id="confirmation-modal-label"></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p id="confirmation-modal-message"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Naspäť</button>
        <%= link_to("Ok", "", id: "confirmation-modal-submit", class: "btn btn-primary px-4") %>
      </div>
    </div>
  </div>
</div>
